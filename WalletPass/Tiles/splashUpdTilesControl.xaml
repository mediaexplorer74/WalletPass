<UserControl x:Class="WalletPass.splashUpdTilesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    >

    
    
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <SolidColorBrush x:Name="LayoutColor" Color="#FFF0F7FF" Opacity="0.85"/>
        </Grid.Background>

        <StackPanel  HorizontalAlignment="Left" Margin="47,320,47,327" >
            <TextBlock x:Name="txtSplash" Text="registering pass" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="26" FontFamily="Segoe WP Light" Foreground="#FF006BA8" />
            <TextBlock x:Name="txtSplashTemp" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="26" FontFamily="Segoe WP Light" Foreground="#FF006BA8" Visibility="Collapsed"  />
            <ProgressBar x:Name="progressBar" HorizontalAlignment="left"  Width="383" IsIndeterminate="True" Height="10" Foreground="#FF006BA8" />
        </StackPanel>
    </Grid>
</UserControl>