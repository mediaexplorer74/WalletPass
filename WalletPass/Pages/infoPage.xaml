        </Grid.RowDefinitions>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <local:PullDownToRefreshPanel x:Name="refreshPanel"
                                          PullThreshold="70"
                                          Grid.Row="0"
                                          RefreshRequested="resfreshPanel_RefreshRequested"
                                           />
            <ListBox x:Name="infoList" Style="{StaticResource ListBoxStyle1}" Grid.Row="1">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="{StaticResource screenWidth}">
                            <TextBlock Margin="20,10,20,0" FontFamily="Segoe WP Light" FontSize="20"
                                       FontWeight="Bold" HorizontalAlignment="Left" Foreground="#82000000"
                                       Text="{Binding Label}"/>
                           
                            <!--RichTextBox-->
                                <TextBox Background="Transparent" Margin="20,0,30,10" FontFamily="Segoe WP Light" FontSize="25"
                                         HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="#64000000" local:RichTextBoxBindingClass.Content="{Binding Value}"/>
                            <Canvas Background="#64000000" Height="1" Margin="20,10,20,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

